@section LoadedWebApplicationFields {
    <p id="LoadedWebApplicationType" style="margin: 0;padding-left: 0.5%;padding-bottom: 0.5%;"></p>
    <p id="LoadedWebApplicationName" style="margin: 0;padding-left: 0.5%;padding-bottom: 0.5%;"></p>
